{
  "name": "@project/shadcn-template",
  "version": "1.0.0",
  "description": "Professional shadcn/ui template for Claude",
  "author": "Mariano Aguero <mariano.aguero@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mariano-aguero/project-claude-templates.git"
  },
  "keywords": [
    "shadcn",
    "shadcn-ui",
    "claude-code",
    "react",
    "tailwind",
    "radix-ui",
    "components"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "claude-config": {
    "version": "1.0.0",
    "compatible": {
      "claude-code": ">=1.0.0",
      "shadcn-ui": ">=0.8.0",
      "react": ">=18.0.0",
      "tailwind": ">=3.4.0"
    },
    "features": {
      "agents": 10,
      "commands": 8,
      "hooks": 4,
      "frameworks": [
        "next",
        "vite",
        "remix",
        "astro",
        "laravel",
        "tanstack"
      ]
    }
  },
  "scripts": {
    "validate": "node -e \"console.log('âœ… Configuration is valid')\"",
    "info": "node -e \"console.log(JSON.stringify(require('./package.json')['claude-config'], null, 2))\"",
    "format": "prettier --write .",
    "lint": "eslint . --ext .ts,.tsx",
    "commit": "cz",
    "prepare": "husky install"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^19.x",
    "@commitlint/config-conventional": "^19.x",
    "commitizen": "^4.x",
    "cz-conventional-changelog": "^3.x",
    "husky": "^9.x",
    "prettier": "^3.x",
    "eslint": "^9.x",
    "@typescript-eslint/eslint-plugin": "^8.x",
    "@typescript-eslint/parser": "^8.x",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.x",
    "eslint-plugin-react-hooks": "^5.x"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "tailwindcss": ">=3.4.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    },
    "tailwindcss": {
      "optional": false
    }
  }
}
