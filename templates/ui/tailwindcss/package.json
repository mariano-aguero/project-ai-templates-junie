{
  "name": "@project/tailwindcss-template",
  "version": "1.0.0",
  "description": "Professional Tailwind CSS template for Claude",
  "author": "Mariano Aguero <mariano.aguero@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mariano-aguero/project-claude-templates.git"
  },
  "keywords": [
    "tailwindcss",
    "tailwind",
    "claude-code",
    "css",
    "utility-first",
    "responsive-design"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "claude-config": {
    "version": "1.0.0",
    "compatible": {
      "claude-code": ">=1.0.0",
      "tailwindcss": ">=3.4.0"
    },
    "features": {
      "agents": 5,
      "commands": 3,
      "hooks": 2,
      "patterns": [
        "responsive-design",
        "dark-mode",
        "custom-utilities",
        "component-variants"
      ]
    }
  },
  "scripts": {
    "validate": "node -e \"console.log('âœ… Configuration is valid')\"",
    "info": "node -e \"console.log(JSON.stringify(require('./package.json')['claude-config'], null, 2))\"",
    "format": "prettier --write .",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "commit": "cz",
    "prepare": "husky install"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^19.x",
    "@commitlint/config-conventional": "^19.x",
    "commitizen": "^4.x",
    "cz-conventional-changelog": "^3.x",
    "husky": "^9.x",
    "prettier": "^3.x",
    "eslint": "^9.x",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-tailwindcss": "^3.x"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "tailwindcss": ">=3.4.0",
    "postcss": ">=8.0.0",
    "autoprefixer": ">=10.0.0"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": false
    },
    "postcss": {
      "optional": false
    },
    "autoprefixer": {
      "optional": false
    }
  }
}
