{
  "name": "@project/nextjs-template",
  "version": "1.0.0",
  "description": "Professional Next.js 16 template for Claude",
  "author": "Mariano Aguero <mariano.aguero@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mariano-aguero/project-claude-templates.git"
  },
  "keywords": [
    "nextjs",
    "next.js",
    "claude-code",
    "react",
    "app-router",
    "server-components",
    "react-19"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.17.0"
  },
  "claude-config": {
    "version": "1.0.0",
    "compatible": {
      "claude-code": ">=1.0.0",
      "nextjs": ">=16.0.0",
      "react": ">=19.0.0",
      "typescript": ">=5.0.0"
    },
    "features": {
      "agents": 11,
      "commands": 6,
      "hooks": 1,
      "frameworks": [
        "next-app-router",
        "react-server-components",
        "server-actions"
      ]
    }
  },
  "scripts": {
    "validate": "node -e \"console.log('âœ… Configuration is valid')\"",
    "info": "node -e \"console.log(JSON.stringify(require('./package.json')['claude-config'], null, 2))\"",
    "format": "prettier --write .",
    "lint": "next lint",
    "commit": "cz",
    "prepare": "husky install"
  },
  "dependencies": {},
  "devDependencies": {
    "@commitlint/cli": "^19.x",
    "@commitlint/config-conventional": "^19.x",
    "commitizen": "^4.x",
    "cz-conventional-changelog": "^3.x",
    "husky": "^9.x",
    "prettier": "^3.x",
    "eslint": "^9.x",
    "eslint-config-next": "16.x",
    "eslint-config-prettier": "^9.x"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "next": ">=15.0.0",
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0",
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": false
    },
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    },
    "typescript": {
      "optional": true
    }
  }
}
